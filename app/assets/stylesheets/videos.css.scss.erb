.video {
  $mobile: new-breakpoint(min-width 320px max-width 480px);
  $medium: new-breakpoint(min-width 481px max-width 800px);
  $desktop: new-breakpoint(min-width 801px);

  @include media($medium) {
    @include span-columns(6);
    @include omega(2n);
  }

  @include media($mobile) {
    @include span-columns(12);
    @include omega();
  }

  @include media($desktop) {
    @include span-columns(4);
    @include omega(3n);
  }

  .wrapper {
    margin: 1em 1em 2em 1em;
    padding: 1em;
    background-color: #e4e4e4;
    border-radius: 5px;
    border: 1px solid #ccc;
    box-shadow: 2px 2px 5px #bbb;
    min-height: 270px;

    .youtube_container, .youtube_modal_container {
      background: no-repeat;
      background-position: center center;
      background-size: cover;
      max-width: 280px;
      height: 157.5px;
      text-align: center;
      cursor: pointer;
      margin: 0px auto;

      &:before {
        content: '';
        height: 100%;
        display: inline-block;
        vertical-align: middle;
      }
      .play_button {
        display: inline-block;
        vertical-align: middle;
        width: 60px;
      }
    }
    .youtube_modal_container {
      margin: 0px;
      max-width: 560px;
      height: 315px;
    }
    .short_description {
      font-size: 1.5em;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  }

  .description {
    margin-top: 1em;
  }

  .metadata{
    padding-top: 0.4em;
    font-size: .75em;
    font-weight: normal;

    .date {
      margin-left: .5em;
      color: #aaa;
    }
  }
  .controls{
    float: right;
    img.edit_video_menu {
      height: 24px;
      width: 24px;
      vertical-align: middle;
      opacity: 0.5;
      &:hover {
        opacity: 1;
      }
    }
  }
}

#welcome-message, #upload-description-message {
  .contextual-message{
    margin: 1em;
    padding: 1em;
    background: $notice-color;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-shadow: 0 2px 2px transparentize(black, 0.8);
  }
}

.videos-index {
  #welcome-message {
    @include span-columns(12);
    @include omega();
  }
}

.videos-show {
  .video {
    @include span-columns(12);
    @include omega();
    .wrapper {
      width: 313px;
    }
  }
}

.videos-new, .videos-create {
  #upload-description-message{
    margin-bottom: 1em;
    margin-top: 1em;
    .contextual-message {
      margin: 0;
    }
  }
  #preview {
    visibility: hidden;
    background: no-repeat;
    background-position: center center;
    background-image: url("<%= asset_path('progress.gif') %>");
    height: 300px;
  }
  #existing .hint.get_help_uploading {
    font-weight: bold;
  }
}
